<h1><%= @cocktail.name %></h1>
<hr>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<%= link_to "Add an ingredient?", new_cocktail_dose_path(@cocktail) %>
<br>
<br>
<% @doses.each do |dose| %>
<p class="text"><%= dose.description %> - <%= dose.ingredient.name %></p><p><%= link_to 'Delete measure', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
